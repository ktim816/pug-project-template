mixin image-jpg(src, alt)
  - const image = `assets/images/${src}`

  +b.image&attributes(attributes)
    img(srcset=`${image}.jpg, ${image}@2x.jpg 2x`, src=`${image}.jpg` alt=alt || '')

mixin image-png(src, alt)
  - const image = `assets/images/${src}`

  +b.image&attributes(attributes)
    img(srcset=`${image}.png, ${image}@2x.png 2x`, src=`${image}.png` alt=alt || '')

mixin image-svg(src, alt)
  +b.image&attributes(attributes)
    img(src=`assets/images/${src}.svg`, alt=alt || '')
